<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <h3>Bookers</h3>
      <div class="collapse navbar-collapse" id="navbarEexample">
        <ul class="nav nav-tabs navbar-right">
              <% if user_signed_in? %>
                    <li class="">
                      <span class="glyphicon glyphicon-home" aria-hidden="true">
                        <%= link_to "Home",user_path(current_user.id) %>
                      </span>
                    </li>
                    <li class="">
                      <span class="glyphicon glyphicon-user" aria-hidden="true"><%= link_to'Users',users_path %>
                      </span>
                    </li>
                    <li class="">
                      <span class="glyphicon glyphicon-book" aria-hidden="true">
                        <%= link_to'Books',books_path %>
                      </span>
                    </li>
                    <li class="">
                      <span class="glyphicon glyphicon-log-in" aria-hidden="true">
                        <%= link_to "logout",destroy_user_session_path, method: :delete %>
                      </span>
                    </li>
              <% else %>
                    <li class="">
                      <span class="glyphicon glyphicon-home" aria-hidden="true">
                        <%= link_to "Home",books_path %></span>
                    </li>
                    <li class="">
                      <span class="glyphicon glyphicon-link" aria-hidden="true">
                        <%= link_to "About","http://localhost:3000/home/about" %></span>
                    </li>
                    <li class="">
                      <span class="glyphicon glyphicon-edit" aria-hidden="true">
                        <%= link_to "sign up",new_user_registration_path %></span>
                    </li>
                    <li class="">
                      <span class="glyphicon glyphicon-log-in" aria-hidden="true">
                        <%= link_to "login",new_user_session_path %></span>
                    </li>
              <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
              
  </body>
</html>
