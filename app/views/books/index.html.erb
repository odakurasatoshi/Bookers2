<div class="container">
	<h1>Books</h1>
		<table class="table table-striped">
			<tbody>
			<% @books.each do |book| %>
				<tr>
				<td><%= attachment_image_tag book.user, :profile_image, :fill, 80, 80, format: 'jpeg', class: "", fallback: "no_image.jpg" %></td>
				<td><%= book.title %></td>
	    		<td><%= book.body%></td>
	      		<td>
	      		<%= link_to "show", book_path(book.id) %>
	      		</td>
	      		</tr>
	    	<% end %>
			</tbody>
		</table>
</div>


<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
		<h3 class="message-error"><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
		<ul>
		<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
		</ul>
	<% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Opinion</h4>
    <%= f.text_area :body %>
 
    <br><%= f.submit 'Create Book' %></br>
 
<% end %>
