<%= flash[:notice] %>

<h1>user/show</h1>

<h4>name</h4>
	<p><%= @user.name %></p>
<h4>introduction</h4>
	<p><%= @user.introduction %></p>
	<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
<% if @user == current_user %>
	<%= link_to "edit", edit_user_path(@user.id) %>
<% end %>

<table>
	<tbody>
		<% @user.books.each do |book| %>
			<tr>
			<td><%= book.title %></td>
    		<td><%= book.body%></td>
      		<td>
      		<%= link_to "show", book_path(book.id) %>
      		</td>
      		</tr>
    	<% end %>
	</tbody>
</table>

<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
		<h3 class="message-error"><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
		<ul>
		<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
		</ul>
	<% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Opinion</h4>
    <%= f.text_area :body %>
 
    <br><%= f.submit 'Create Book' %></br>
 
<% end %>


