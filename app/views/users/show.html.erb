<%= flash[:notice] %>

<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/user', user: @user %>
			<%= render 'books/newbook', book: @book%>
		</div>
		<div class="col-xs-9">
			<h1>Books</h1>
			<table class="table table-striped">
				<tbody>
					<% @user.books.each do |book| %>
						<tr>
						<td><%= attachment_image_tag @user, :profile_image, :fill, 80, 80, format: 'jpeg', class: "", fallback: "no_image.jpg" %></td>
						<td><%= link_to book.title,book_path(book.id) %></td>
			    		<td><%= book.body%></td>
			      		<td>
			      		<%= link_to "show", book_path(book.id) %>
			      		</td>
			      		</tr>
			    	<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>



