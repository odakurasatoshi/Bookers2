<%= form_for(@user) do |f| %>
	<% if @user.errors.any? %>
		<h3 class="message-error"><%= @user.errors.count %> errors prohibited this user from being saved:</h3>
		<ul>
		<% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
		</ul>
	<% end %>
		<h2>name</h2>
		<%= f.text_field :name %>
		<h2>introduction</h2>
		<%= f.text_field :introduction %>
		<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "", fallback: "no_image.jpg"%>
	    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
		<%= f.submit 'Update Book' %>
		<%= link_to "Show", user_path(@user.id) %>
		<%= link_to "Back", users_path %>
<% end %>