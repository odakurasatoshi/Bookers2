<%= flash[:notice] %>
<div class="container">
	<h1>User info</h1>
		<%= attachment_image_tag @user, :profile_image, :fill, 80, 80, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
		<h4>name</h4>
			<p><%= @user.name %></p>
		<h4>introduction</h4>
			<p><%= @user.introduction %></p>
		<% if @user == current_user %>
			<%= link_to "edit", edit_user_path(@user.id) %>
		<% end %>
</div>
<div class="container">
	<h1>Users</h1>
		<table class="table table-striped">
			<tbody>
			<% @users.each do |user| %>
				<tr>
				<td><%= attachment_image_tag user, :profile_image, :fill, 80, 80, format: 'jpeg', class: "", fallback: "no_image.jpg" %></td>
				<td><%= user.name %></td>
	      		<td>
	      		<%= link_to "show", user_path(user.id) %>
	      		</td>
	      		</tr>
	    	<% end %>
			</tbody>
		</table>
</div>

<h1>New book</h1>
	<%= form_for(@book) do |f| %>
		<% if @book.errors.any? %>
			<h3 class="message-error"><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
			<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		<% end %>
	    <h4>Title</h4>
	    <%= f.text_field :title %>
	 
	    <h4>Opinion</h4>
	    <%= f.text_area :body %>
	 
	    <br><%= f.submit 'Create Book' %></br>
	 
	<% end %>