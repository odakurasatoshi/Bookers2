<%= flash[:notice] %>

<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/user', user: @user %>
			<%= render 'books/newbook', book: @book%>
		</div>
		<div class="col-xs-9">
			<h1>Users</h1>
				<table class="table table-striped">
					<tbody>
					<% @users.each do |user| %>
						<tr>
						<td><%= attachment_image_tag user, :profile_image, :fill, 80, 80, format: 'jpeg', class: "", fallback: "no_image.jpg" %></td>
						<td><%= user.name %></td>
			      		<td>
			      		<%= link_to "Show", user_path(user.id) %>
			      		</td>
			      		</tr>
			    	<% end %>
					</tbody>
				</table>
		</div>
	</div>
</div>


