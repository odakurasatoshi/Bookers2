<%= flash[:notice] %>

<h1>Users</h1>
	<table>
		<tbody>
		<% @users.each do |user| %>
			<tr>
			<td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
			<td><%= user.name %></td>
      		<td>
      		<%= link_to "show", user_path(user.id) %>
      		</td>
      		</tr>
    	<% end %>
		</tbody>
	</table>

<h1>New book</h1>
	<%= form_for(@book) do |f| %>
		<% if @book.errors.any? %>
			<h3 class="message-error"><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
			<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		<% end %>
	    <h4>Title</h4>
	    <%= f.text_field :title %>
	 
	    <h4>Opinion</h4>
	    <%= f.text_area :body %>
	 
	    <br><%= f.submit 'Create Book' %></br>
	 
	<% end %>